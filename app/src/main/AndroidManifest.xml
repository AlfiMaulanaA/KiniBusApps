<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
        <!-- Internet permission untuk Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KiniBusApps">
        <!-- Welcome Activity - MAIN LAUNCHER -->
        <activity
            android:name=".views.activities.WelcomeActivity"
            android:exported="true"
            android:label="KiniBus - Welcome"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".views.activities.LoginActivity"
            android:exported="false"
            android:label="KiniBus - Login"
            android:screenOrientation="portrait" />

        <!-- Register Activity -->
        <activity
            android:name=".views.activities.RegisterActivity"
            android:exported="false"
            android:label="KiniBus - Register"
            android:screenOrientation="portrait" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".views.activities.DashboardActivity"
            android:exported="false"
            android:label="KiniBus Dashboard"
            android:screenOrientation="portrait" />

        <!-- Detail Kursi Activity -->
        <activity
            android:name=".views.activities.DetailKursiActivity"
            android:exported="false"
            android:label="Detail Kursi - KiniBus"
            android:screenOrientation="portrait" />

        <!-- Profile Activity -->
        <activity
            android:name=".views.activities.ProfileActivity"
            android:exported="false"
            android:label="Profile - KiniBus"
            android:screenOrientation="portrait" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".views.activities.ForgotPasswordActivity"
            android:exported="false"
            android:label="Reset Password - KiniBus"
            android:screenOrientation="portrait" />

        <!-- Seat Selection Activity (NEW) -->
        <activity
            android:name=".views.activities.SeatSelectionActivity"
            android:exported="false"
            android:label="Pilih Kursi - KiniBus"
            android:screenOrientation="portrait" />

        <!-- Booking Summary Activity (NEW) -->
        <activity
            android:name=".views.activities.BookingSummaryActivity"
            android:exported="false"
            android:label="Ringkasan Pemesanan - KiniBus"
            android:screenOrientation="portrait" />

        <!-- Payment Confirmation Activity (NEW) -->
        <activity
            android:name=".views.activities.PaymentConfirmationActivity"
            android:exported="false"
            android:label="Konfirmasi - KiniBus"
            android:screenOrientation="portrait" />

        <!-- E-Ticket Activity (NEW) -->
        <activity
            android:name=".views.activities.ETicketActivity"
            android:exported="false"
            android:label="E-Tiket - KiniBus"
            android:screenOrientation="portrait" />

        <!-- Firebase Test Activity - SECONDARY untuk testing connection -->
        <activity
            android:name=".FirebaseTestActivity"
            android:exported="false"
            android:label="Firebase Test"
            android:screenOrientation="portrait" />

        <!-- Main Activity - SECONDARY untuk development -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="KiniBus Main">
            <!-- No MAIN/LAUNCHER - accessed programmatically -->
        </activity>
    </application>

</manifest>
