<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/seat_selected"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Normal/Available state -->
    <item>
        <shape>
            <stroke 
                android:width="1dp" 
                android:color="@color/seat_available_border"/>
            <solid android:color="@color/seat_available"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
