<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Kursi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tv_bus_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/text_medium"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- AC Badge -->
        <TextView
            android:id="@+id/badge_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❄ AC"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_badge_green"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Seat Status Filter Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="false"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_available"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tersedia"
            android:textColor="@color/text_medium"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/border_gray"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_selected"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dipilih"
            android:textColor="@color/white"
            android:checked="true"
            app:chipBackgroundColor="@color/primary_blue" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_booked"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terisi"
            android:textColor="@color/text_medium"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/border_gray"
            app:chipStrokeWidth="1dp" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Seat Grid Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- Driver Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/person_24px"
                app:tint="@color/text_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOPIR"
                android:textSize="12sp"
                android:textColor="@color/text_light"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Seat Grid RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_seat_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light"
        android:layout_marginBottom="20dp" />

    <!-- Bottom Summary Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Selected Seat Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kursi Dipilih"
                android:textSize="12sp"
                android:textColor="@color/text_light"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_selected_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Total Price -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="12sp"
                android:textColor="@color/text_light"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Lanjut Pemesanan →"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/primary_blue"
        android:elevation="2dp" />

</LinearLayout>

</androidx.cardview.widget.CardView>
