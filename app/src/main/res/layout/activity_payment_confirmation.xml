<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            app:tint="@color/text_dark" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Success Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_payment_success"
            android:layout_marginTop="24dp"
            android:contentDescription="Success Illustration" />

        <!-- Success Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran Berhasil!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="16dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiket Anda telah terbit. Simpan bukti\npemesanan ini."
            android:textSize="14sp"
            android:textColor="@color/text_medium"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

        <!-- Booking Code Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KODE BOOKING"
                    android:textSize="12sp"
                    android:textColor="@color/text_light"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tv_booking_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GB-882930"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:fontFamily="sans-serif-black" />

                    <ImageButton
                        android:id="@+id/btn_copy_code"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/check_24px"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="12dp"
                        app:tint="@color/text_medium"
                        android:contentDescription="Copy code" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Journey Map Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_map_pattern"
                android:padding="24dp">
                
                <!-- Gradient Overlay for Readability -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000" />

                <TextView
                    android:id="@+id/label_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ DETAIL PERJALANAN"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <!-- Origin -->
                <LinearLayout
                    android:id="@+id/layout_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_detail"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_origin_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:id="@+id/tv_origin_terminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulo Gebang"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.8" />

                </LinearLayout>

                <!-- Arrow -->
                <TextView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="â†’"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!-- Destination -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/label_detail"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_destination_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:id="@+id/tv_destination_terminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leuwi Panjang"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.8" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Date & Time Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="12sp"
                    android:textColor="@color/text_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar_today_24px"
                        app:tint="@color/primary_blue"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam Berangkat"
                    android:textSize="12sp"
                    android:textColor="@color/text_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_schedule_24px"
                        app:tint="@color/primary_blue"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- View E-Ticket Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_ticket"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸŽ«  Lihat E-Tiket"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primary_blue"
            android:layout_marginBottom="16dp" />

        <!-- Back to Home Link -->
        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali ke Beranda"
            android:textSize="14sp"
            android:textColor="@color/text_medium"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>
