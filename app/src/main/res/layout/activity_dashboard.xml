<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".views.activities.DashboardActivity">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <!-- Logo and Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/logo_background"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="Bus icon"
                    app:tint="@color/blue_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KiniBus"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:contentDescription="Profile picture"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Main Content Scroll Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mau pergi ke mana hari ini?"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temukan perjalanan bus nyaman &amp; murah."
                    android:textSize="16sp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <!-- Search Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- From Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asal Keberangkatan"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="8dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_launcher_foreground"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Location icon"
                                    app:tint="@color/blue_primary" />

                                <EditText
                                    android:id="@+id/from_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Jakarta"
                                    android:text="Jakarta"
                                    android:background="@android:color/transparent"
                                    android:paddingStart="52dp"
                                    android:paddingEnd="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:inputType="text" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Swap Button (Absolute Positioned) -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/swap_button"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                app:cornerRadius="20dp"
                                app:backgroundTint="@color/white"
                                app:strokeColor="@color/gray_light"
                                app:strokeWidth="1dp"
                                app:icon="@drawable/ic_launcher_foreground"
                                app:iconTint="@color/blue_primary"
                                android:elevation="4dp" />

                        </RelativeLayout>

                        <!-- To Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tujuan"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="8dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_launcher_foreground"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Destination icon"
                                    app:tint="@color/blue_primary" />

                                <EditText
                                    android:id="@+id/to_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Bandung"
                                    android:text="Bandung"
                                    android:background="@android:color/transparent"
                                    android:paddingStart="52dp"
                                    android:paddingEnd="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:inputType="text" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Date Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="24dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Pergi"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="8dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_launcher_foreground"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Calendar icon"
                                    app:tint="@color/blue_primary" />

                                <EditText
                                    android:id="@+id/date_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Pilih tanggal"
                                    android:background="@android:color/transparent"
                                    android:paddingStart="52dp"
                                    android:paddingEnd="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:inputType="date"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Search Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/search_button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Cari Bus"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/blue_primary"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/ic_launcher_foreground"
                            android:padding="12dp"
                            app:icon="@drawable/ic_launcher_foreground"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Recent Searches Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rute Populer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Semua"
                        android:textSize="14sp"
                        android:textColor="@color/blue_primary"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Recent Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Item 1: Jakarta → Yogyakarta -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- City Image -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_launcher_background"
                                android:scaleType="centerCrop"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Jakarta image" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jakarta"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_launcher_foreground"
                                        android:layout_marginHorizontal="8dp"
                                        android:contentDescription="Arrow"
                                        app:tint="@color/gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Yogyakarta"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mulai dari Rp 150.000"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_launcher_foreground"
                                android:contentDescription="Chevron right"
                                app:tint="@color/gray" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Item 2: Bandung → Surabaya -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- City Image -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_launcher_background"
                                android:scaleType="centerCrop"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Bandung image" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bandung"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_launcher_foreground"
                                        android:layout_marginHorizontal="8dp"
                                        android:contentDescription="Arrow"
                                        app:tint="@color/gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Surabaya"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mulai dari Rp 210.000"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_launcher_foreground"
                                android:contentDescription="Chevron right"
                                app:tint="@color/gray" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Item 3: Semarang → Solo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- City Image -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_launcher_background"
                                android:scaleType="centerCrop"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Semarang image" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Semarang"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_launcher_foreground"
                                        android:layout_marginHorizontal="8dp"
                                        android:contentDescription="Arrow"
                                        app:tint="@color/gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Solo"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mulai dari Rp 45.000"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_launcher_foreground"
                                android:contentDescription="Chevron right"
                                app:tint="@color/gray" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:gravity="center">

        <!-- Home Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/tab_selected_background">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Home"
                app:tint="@color/blue_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/blue_primary" />

        </LinearLayout>

        <!-- Tickets Tab -->
        <LinearLayout
            android:id="@+id/tickets_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_google_logo"
                android:contentDescription="Tickets"
                app:tint="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiket"
                android:textSize="10sp"
                android:textColor="@color/gray" />

        </LinearLayout>

        <!-- Notifications Tab -->
        <LinearLayout
            android:id="@+id/notifications_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Notifications"
                app:tint="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notif"
                android:textSize="10sp"
                android:textColor="@color/gray" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/profile_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Profile"
                app:tint="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textSize="10sp"
                android:textColor="@color/gray" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>