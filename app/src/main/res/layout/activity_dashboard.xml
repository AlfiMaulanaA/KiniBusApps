<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".views.activities.DashboardActivity">

    <!-- Top App Bar - GoBus Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:elevation="4dp">

            <!-- Logo and Title - KiniBus Style -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Logo with Bus Icon -->
                <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_logo_badge"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/airport_shuttle_24px"
                        android:contentDescription="Bus icon"
                        app:tint="@color/blue_primary" />

                </LinearLayout>

                <!-- Title - KiniBus Style -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KiniBus"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        <!-- Profile Picture - GoBus Style -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:contentDescription="Profile picture"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Main Content Scroll Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section - KiniBus Style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mau pergi ke mana hari ini?"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temukan perjalanan bus nyaman &amp; murah dengan KiniBus."
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <!-- Search Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- From Input - KiniBus Style -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asal Keberangkatan"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="sans-serif-medium" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_location_on_24px"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Location icon"
                                    app:tint="@color/blue_primary" />

                                <EditText
                                    android:id="@+id/from_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Jakarta"
                                    android:text="Jakarta"
                                    android:background="@android:color/transparent"
                                    android:paddingStart="52dp"
                                    android:paddingEnd="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Swap Button (Absolute Positioned) - GoBus Style -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/swap_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            app:cornerRadius="20dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/gray_light"
                            app:strokeWidth="1dp"
                            app:icon="@drawable/swap_vertical_circle_24px"
                            app:iconTint="@color/blue_primary"
                            android:elevation="2dp" />

                        </RelativeLayout>

                        <!-- To Input - KiniBus Style -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tujuan"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="sans-serif-medium" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/location_on_24px"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Destination icon"
                                    app:tint="@color/blue_primary" />

                                <EditText
                                    android:id="@+id/to_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Bandung"
                                    android:text="Bandung"
                                    android:background="@android:color/transparent"
                                    android:paddingStart="52dp"
                                    android:paddingEnd="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Date Input - KiniBus Style -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Pergi"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="sans-serif-medium" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar_today_24px"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Calendar icon"
                                    app:tint="@color/blue_primary" />

                                <EditText
                                    android:id="@+id/date_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Pilih tanggal"
                                    android:background="@android:color/transparent"
                                    android:paddingStart="52dp"
                                    android:paddingEnd="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:inputType="date"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Search Button - KiniBus Style -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/search_button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Cari Bus"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/blue_primary"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/ic_search_24px"
                            android:padding="12dp"
                            app:icon="@drawable/ic_search_24px"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Recent Searches Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rute Populer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Semua"
                        android:textSize="14sp"
                        android:textColor="@color/blue_primary"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Recent Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Item 1: Jakarta → Yogyakarta -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:strokeColor="@color/gray_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                    <!-- Enhanced City Image with Icon Overlay -->
                    <RelativeLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/img_city_jakarta"
                            android:scaleType="centerCrop"
                            android:contentDescription="Jakarta image"
                            android:elevation="2dp" />

                        <!-- City Icon Overlay -->
                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/setting_icon_background_blue"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:elevation="3dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/my_location_24px"
                                android:contentDescription="Location pin"
                                app:tint="@color/white" />

                        </LinearLayout>

                    </RelativeLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jakarta"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/arrow_back_24px"
                                        android:layout_marginHorizontal="8dp"
                                        android:contentDescription="Arrow"
                                        app:tint="@color/gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Yogyakarta"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mulai dari Rp 150.000"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/arrow_back_24px"
                                android:contentDescription="Chevron right"
                                app:tint="@color/gray"
                                android:rotation="180" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Item 2: Bandung → Surabaya -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:strokeColor="@color/gray_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                    <!-- Enhanced City Image with Icon Overlay -->
                    <RelativeLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/img_city_bandung"
                            android:scaleType="centerCrop"
                            android:contentDescription="Bandung image"
                            android:elevation="2dp" />

                        <!-- City Icon Overlay -->
                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/setting_icon_background_green"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:elevation="3dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/my_location_24px"
                                android:contentDescription="Location pin"
                                app:tint="@color/white" />

                        </LinearLayout>

                    </RelativeLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bandung"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/arrow_back_24px"
                                        android:layout_marginHorizontal="8dp"
                                        android:contentDescription="Arrow"
                                        app:tint="@color/gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Surabaya"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mulai dari Rp 210.000"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/arrow_back_24px"
                                android:contentDescription="Chevron right"
                                app:tint="@color/gray"
                                android:rotation="180" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Item 3: Semarang → Solo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:strokeColor="@color/gray_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                    <!-- Enhanced City Image with Icon Overlay -->
                    <RelativeLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/img_city_semarang"
                            android:scaleType="centerCrop"
                            android:contentDescription="Semarang image"
                            android:elevation="2dp" />

                        <!-- City Icon Overlay -->
                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/setting_icon_background_orange"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:elevation="3dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/my_location_24px"
                                android:contentDescription="Location pin"
                                app:tint="@color/white" />

                        </LinearLayout>

                    </RelativeLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Semarang"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                    <!-- Enhanced Arrow with Better Icon -->
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/airport_shuttle_24px"
                                        android:layout_marginHorizontal="8dp"
                                        android:contentDescription="Bus route arrow"
                                        app:tint="@color/blue_primary"
                                        android:rotation="90" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Solo"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mulai dari Rp 45.000"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>

                            <!-- Arrow -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/arrow_back_24px"
                                android:contentDescription="Chevron right"
                                app:tint="@color/gray"
                                android:rotation="180" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Standard Bottom Navigation Bar - 5 Tabs -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp" />

</LinearLayout>