<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".views.activities.WelcomeActivity">

    <!-- Hero Image Section (Top 60%) -->
    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_content_card"
        android:src="@drawable/img_login_hero"
        android:scaleType="centerCrop"
        android:contentDescription="Bus hero image" />

    <!-- Logo Badge (Floating centered top) -->
    <LinearLayout
        android:id="@+id/logo_badge_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_logo_badge"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        android:elevation="4dp">

        <!-- Bus Icon -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/airport_shuttle_24px"
            android:contentDescription="Bus icon"
            app:tint="@color/primary_blue" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KiniBus"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-black" />

    </LinearLayout>

    <!-- Bottom Content Card -->
    <LinearLayout
        android:id="@+id/bottom_content_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_card"
        android:padding="24dp"
        android:paddingTop="32dp"
        android:elevation="8dp">

        <!-- Heading Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jelajahi Kota\ndengan KiniBus"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="16dp" />

        <!-- Description Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan tiket bus antar kota dengan mudah, cepat, dan terpercaya. Perjalanan nyaman, harga aman."
            android:textSize="16sp"
            android:textColor="@color/text_medium"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Primary Button (Masuk) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Masuk"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primary_blue"
            android:elevation="2dp"
            android:layout_marginBottom="12dp" />

        <!-- Secondary Button (Daftar Akun) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Daftar Akun"
            android:textSize="16sp"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="12dp"
            app:strokeColor="@color/primary_blue"
            app:strokeWidth="1.5dp"
            android:layout_marginBottom="16dp" />

        <!-- Skip Link (Lewati dulu) -->
        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lewati dulu"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

</RelativeLayout>