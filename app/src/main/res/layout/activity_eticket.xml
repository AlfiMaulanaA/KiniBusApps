<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4dp"
            app:title="E-Tiket"
            app:titleTextColor="@color/text_dark"
            app:navigationIcon="@drawable/arrow_back_24px" />

        <!-- Ticket Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/airport_shuttle_24px"
                        app:tint="@color/primary_blue"
                        android:contentDescription="Bus icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="KiniBus E-Ticket"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tv_booking_code_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GB-882930"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue" />

                </LinearLayout>

                <!-- QR Code -->
                <ImageView
                    android:id="@+id/img_qr_code"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    android:padding="16dp"
                    android:contentDescription="QR Code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tunjukkan QR code saat check-in"
                    android:textSize="12sp"
                    android:textColor="@color/text_light"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"
                    android:layout_marginVertical="16dp" />

                <!-- Journey Details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Perjalanan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp" />

                <!-- From -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Dari"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_origin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- To -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Ke"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_destination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Jam"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"
                    android:layout_marginVertical="16dp" />

                <!-- Bus Details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Bus"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp" />

                <!-- Bus Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Bus"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_bus_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- Seats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Kursi"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_seats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2B, 3A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue" />

                </LinearLayout>

                <!-- Passenger Count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Penumpang"
                        android:textSize="14sp"
                        android:textColor="@color/text_medium" />

                    <TextView
                        android:id="@+id/tv_passenger_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2 orang"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="0dp">

            <!-- Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_download"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“¥ Download Tiket"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                app:cornerRadius="12dp"
                app:strokeColor="@color/primary_blue"
                app:strokeWidth="1.5dp"
                android:layout_marginBottom="12dp" />

            <!-- Share Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“¤ Bagikan Tiket"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                app:cornerRadius="12dp"
                app:strokeColor="@color/primary_blue"
                app:strokeWidth="1.5dp"
                android:layout_marginBottom="12dp" />

            <!-- Close Button -->
            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:textSize="14sp"
                android:textColor="@color/text_medium"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
